{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "alwaysStrict": true,
    "lib": [
      "ESNext",
    ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}